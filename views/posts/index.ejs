
<% for (var i in posts) { %>
  <div class="post">
    <div class="page-header">
      <h1>
        <a href='/posts/<%= posts[i].id %>' class='titlelink'> <%= posts[i].title %> </a>
        <small>por <em> <%= posts[i].author && posts[i].author.name || "Sin autor" %> </em></small>
      </h1>
      <em> <%= posts[i].updatedAt.toLocaleDateString() %></em>

      <div id="favoritos">
      <% if (session.user) { %>


                  <%var esFavorito = 0%>
                  <%for(var j in posts[i].favourites){%>
                        <%if (posts[i].favourites[j].userId == session.user.id){%>
                          <%esFavorito = 1;%>
                        <%}%>
                  <%}%>


                  <%if (esFavorito){%>
                      <form  method='post' action='/users/<%= session.user.id%>/favourites/<%= posts[i].id %>'>
                        <button class='btn btn-warning btn-mini' type='hidden' name='_method' value='delete'><i class='icon-star icon-white'></i></button>
                      </form>
                          
                  <% }else{%>
                      <form  method='post' action='/users/<%= session.user.id%>/favourites/<%= posts[i].id %>'>
                        <button class='btn btn-warning btn-mini' type='hidden' name='_method' value='put'><i class='icon-star'></i></button>
                      </form>
                  <% } %>

      <% } %>
      </div>

      <%if(posts[i].comments){%>
        <p id="comentarios">
            <small>Comentarios: </small>
            <small><%= posts[i].comments.length%></small>
        </p>
     <%}%>

   </div>
      
     <p>
        <%= posts[i].body.slice(0,1000) %> ... 
     </p>
     

     <footer class="pull-right">

      

      <% if (session.user && session.user.id == posts[i].authorId) {%>

        <% var form_name = 'fpi' + i; %>

        <form method='post' action='/posts/<%= posts[i].id %>'
              name='<%= form_name %>'>
          <input type='hidden' name='_method' value='delete'>
          <a class='btn btn-warning btn-mini' href="/posts/<%= posts[i].id %>/edit"> 
             <i class='icon-edit icon-white'></i> Editar 
          </a> 
          <a class='btn btn-danger btn-mini' href="" 
             onclick="return confirmarSubmit('Â¿Seguro que desea borrar el post?', '<%= form_name %>')"> 
             <i class='icon-trash icon-white'></i> Borrar
          </a>  
        </form>

      <% } %>

     <footer>
  </div>
<%  }; %>

<footer>
  <nav>
    <a href="/posts/new"> <i class='icon-plus-sign'></i> Crear nuevo Post </a>
  </nav>
</footer>

